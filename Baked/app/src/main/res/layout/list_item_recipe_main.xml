<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/recipe_button_height"
    android:layout_height="@dimen/recipe_button_height"
    android:background="@drawable/touch_selector"
    android:layout_margin="8dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"
        android:id="@+id/main_activity_recipe_imageview"
        android:alpha="0.4"
        android:contentDescription="@string/recipe_button_thumbnail" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_activity_recipename_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            style="@style/RecipeButtonTextLarge"/>
        <TextView
            android:id="@+id/main_activity_servingsize_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RecipeButtonTextSmall"/>
    </LinearLayout>
</RelativeLayout>